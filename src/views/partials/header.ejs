<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="brand">AcmeCorp</a>
    <nav>
      <a href="/">Home</a>
      <% if (!session.user) { %>
        <a href="/login" class="btn btn-primary">Customer Login</a>
      <% } else { %>
        <form method="post" action="/logout" style="display:inline">
          <button type="submit" class="btn">Logout (<%= session.user.username %>)</button>
        </form>
      <% } %>
    </nav>
  </div>
  <div class="progress-bar">
    <% const step = (req && req.path && req.path.includes('review')) ? 3 : (req && req.path && req.path.includes('step2')) ? 2 : (req && req.path && req.path.includes('step1')) ? 1 : 0; %>
    <div class="progress" style="width: <%= step * 33 %>%"></div>
  </div>
  <script
    type="text/javascript"
    src="https://plug-platform.devrev.ai/static/plug.js">
  </script>

</header>


